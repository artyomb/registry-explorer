    function showNotification(status, message, result = null) {
        const popup = document.getElementById('notificationPopup');
        popup.className = `popup popup-${status === 'Ok' ? 'success' : 'error'}`;
        popup.style.display = 'block';

        // Base notification content
        let notificationContent = `
          <strong>${status}</strong>: ${message}
          <button class="close-button" onclick="closeNotification()">×</button>
      `;

        if (result) {
            const formattedResult = JSON.stringify(result, null, 2); // Pretty-print JSON
            const additionalMessage = `
              <button class="toggle-button" onclick="toggleDetails()"
                  style="
                      background-color: #d8eaff;
                      color: #0056b3;
                      border: none;
                      padding: 0.3125rem 0.625rem;
                      border-radius: 0.1875rem;
                      cursor: pointer;
                      font-size: 0.85em;
                      margin-top: 0.625rem;">
                  Show Details
              </button>
              <div id="detailedResponse" style="display: none; margin-top: 10px;">
                  <h3>Detailed Response:</h3>
                  <pre style="background-color: #d8eaff; color: #333; padding: 10px; border: 1px solid #0056b3; border-radius: 5px; overflow-x: auto;">${formattedResult}</pre>
              </div>
          `;
            notificationContent += additionalMessage; // Append detailed response with toggle
        }

        // Set the final content
        popup.innerHTML = notificationContent;
    }

    // JavaScript function to toggle detailed info visibility
    function toggleDetails() {
        const details = document.getElementById('detailedResponse');
        const toggleButton = document.querySelector('.toggle-button');

        if (details.style.display === 'none') {
            details.style.display = 'block';
            toggleButton.textContent = 'Hide Details';
        } else {
            details.style.display = 'none';
            toggleButton.textContent = 'Show Details';
        }
    }

    function closeNotification() {
        document.getElementById('notificationPopup').style.display = 'none';
    }

    function askConfirmation(message, confirmation_target) {
        const userInput = prompt(message + "\nTo confirm, please type '" + confirmation_target + "':");
        return userInput === confirmation_target;
    }


