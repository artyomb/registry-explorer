sass:
  .tooltip
    position: relative
    display: inline-block
    border-bottom: 0.0625rem dotted black
    &:hover
      .tooltiptext
        visibility: visible
    .tooltiptext
      display: inline-block
      visibility: hidden
      width: 7.5rem
      background-color: black
      color: #fff
      text-align: center
      border-radius: 0.375rem
      padding: 0.3125rem 0
      position: absolute
      z-index: 1
      bottom: 150%
      left: 50%
      margin-left: -3.75rem
      &::after
        content: ""
        position: absolute
        top: 100%
        left: 50%
        margin-left: -0.375rem
        border-width: 0.375rem
        border-style: solid
        border-color: black transparent transparent transparent


  body
    display: flex
    flex-direction: column
    font-family: sans-serif
    box-sizing: border-box
    margin: 0 auto
    padding: 0
    background-color: white

    .further-layout-container
      display: block
      padding: 2rem
    .service-navigation-container
      font-weight: bold
      position: sticky
      top: 0
      z-index: 1000
      display: flex
      flex-direction: row
      width: 100%
      justify-content: left
      align-items: center
      background-color: #4d7DD0
      color: white

      a
        text-decoration: none
        color: white
        padding: 1.25rem
        transition: background-color 0.3s ease, text-decoration 0.3s ease

      .navig-element
        display: flex
        color: white
        padding: 1.25rem
        transition: background-color 0.3s ease, text-decoration 0.3s ease
        &:hover
          background-color: #2b61c5
      .has-inner-list
        display: flex
        flex-direction: row
        column-gap: 0.3125rem
        align-items: center
        justify-content: center
        position: relative
        &:hover
          background-color: #2b61c5
          .inner-list
            display: block
            width: -webkit-fill-available
          .chevron-down
            transform: rotate(180deg)
            transition: transform 0.3s ease
        .chevron-down
          filter: sepia(100%) hue-rotate(180deg) brightness(200%) contrast(100%)
          rotate: 90deg
          transform: rotate(0deg)
          transition: transform 0.3s ease
        .inner-list
          display: none
          position: absolute
          background-color: #4d7DD0
          top: 100%
          right: 0
          transform: none
          z-index: 1000
        .inner-element
          display: flex
          text-align: center
          flex-direction: row
          align-items: center
          justify-content: center
          background-color: #4d7DD0
          &:hover
            background-color: #2b61c5
    form
      display: flex
      flex-direction: column
      gap: 1rem
      padding: 1rem
      margin: 2rem auto
      min-width: 40rem
      background: #ffffff
      border-radius: 0.5rem
      box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.1)

      .form-header
        text-align: center
        .hdr
          font-weight: bold
          color: #333
          font-size: 2rem
          margin-bottom: 0.5rem
        .desc
          color: #666

      .form-filed-block
        display: flex
        flex-direction: column
        gap: 0.5rem
        padding: 0.5rem 0rem

    label
      display: block

    input[type="file"], input[type="text"], textarea, select, option
      width: 100%
      padding-block: 0
      padding-inline: 0
      margin: 0
      height: 2.5rem
      padding: 0.5rem
      border: 0.0625rem solid #ddd
      border-radius: 0.25rem


    select
      -webkit-box-sizing: border-box
      -moz-box-sizing: border-box
      box-sizing: border-box
      -webkit-appearance: none
      -moz-appearance: none
      background-position: right center
      background-repeat: no-repeat
      background-size: 1.25rem
      background-image: url('/images/chevron-right-rotated.svg')

    option
      padding: 0.5rem
      background-color: #fff
      color: #333
      font-size: 1rem

    textarea
      height: 4rem
      resize: vertical

    .button-container
      display: flex
      justify-content: center
      align-items: center

    button
      background-color: #4CAF50
      color: white
      padding: 0.75rem 1.5rem
      border: none
      border-radius: 0.25rem
      cursor: pointer
      transition: all 0.3s ease
    .popup-success
      background-color: #4CAF50
      color: white

    .popup-error
      background-color: #f44336
      color: white

    button.loading
      background-color: #45a049
      transform: scale(0.95)
      opacity: 0.8
      pointer-events: none

    .close-button
      font-size: 0.875rem
      width: 1.25rem
      height: 1.25rem
      line-height: 1.25rem
      padding: 0
      position: absolute
      right: 0.3125rem
      top: 0.3125rem
      background-color: inherit
      opacity: 0.9
    .popup
      display: none
      position: fixed
      top: 1.25rem
      right: 1.25rem
      padding: 1.25rem
      border-radius: 0.5rem
      box-shadow: 0 0.25rem 0.75rem rgba(0, 0, 0, 0.15)
      animation: slideIn 0.5s ease-out
      z-index: 1000

      @keyframes slideIn
        from
          transform: translateX(100%)
        to
          transform: translateX(0)

    table
      width: 100%
      border-collapse: collapse
      margin: 1.25rem 0
      background: #fff
      box-shadow: 0 0.0625rem 0.1875rem rgba(0, 0, 0, 0.2)
      border-radius: 0.25rem
      th, td
        padding: 0.75rem 0.9375rem
        text-align: left
        border-bottom: 0.0625rem solid #ddd
      th
        background-color: #f8f9fa
        color: #333
        font-weight: 600
        text-align: left
        text-transform: uppercase
      tr
        background-color: #fff
        &:hover
          background-color: #e4e4e4
          transition: background-color 0.3s ease
      tr
        .coloring-row
          &:nth-child(even)
            background-color: #fff
            .common-table-cell
              background-color: #f9f9f9
            &:hover
              background-color: #e4e4e4
              transition: background-color 0.3s ease

          &:nth-child(odd)
            background-color: #f9f9f9
            .common-table-cell
              background-color: #f9f9f9

            &:hover
              background-color: #e4e4e4
              transition: background-color 0.3s ease
      td
        color: #666

  body
    .content-container
      height: 80vh
      display: flex
      flex-direction: row
      column-gap: 1rem
      padding: 1rem
      border: 0.1rem solid #ccc
      border-radius: 0.5rem